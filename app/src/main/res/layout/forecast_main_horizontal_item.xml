<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/blue_grey_900"
    >

    <!--后天#####################################-->
    <TextView
        android:id="@+id/tv_forecast_date2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"

        tool:text="周日"
        android:textSize="28sp"
        android:textColor="@color/blue_grey_800_mix"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


    <TextView
        android:id="@+id/tv_forecast_highest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        tool:text="29°"
        android:textSize="24sp"
        android:textColor="@color/blue_grey_100"
        android:textStyle="bold"

        android:layout_marginEnd="10dp"

        app:layout_constraintTop_toTopOf="@id/tv_forecast_date2"
        app:layout_constraintStart_toEndOf="@id/tv_forecast_date2"
        />

    <TextView
        android:id="@+id/tv_forecast_lowest2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tool:text="10°"
        android:textSize="22sp"
        android:textColor="@color/blue_grey_100"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/tv_forecast_date2"
        app:layout_constraintStart_toEndOf="@id/tv_forecast_date2"
        />

    <!--未来第三天###########################################-->
    <TextView
        android:id="@+id/tv_forecast_date3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"

        tool:text="周日"
        android:textSize="28sp"
        android:textColor="@color/blue_grey_800_mix"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <TextView
        android:id="@+id/tv_forecast_highest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        tool:text="29°"
        android:textSize="24sp"
        android:textColor="@color/blue_grey_100"
        android:textStyle="bold"

        android:layout_marginEnd="10dp"

        app:layout_constraintTop_toTopOf="@id/tv_forecast_date3"
        app:layout_constraintStart_toEndOf="@id/tv_forecast_date3"
        />

    <TextView
        android:id="@+id/tv_forecast_lowest3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tool:text="10°"
        android:textSize="22sp"
        android:textColor="@color/blue_grey_100"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/tv_forecast_date3"
        app:layout_constraintStart_toEndOf="@id/tv_forecast_date3"
        />

    <!--未来四天#################################-->
    <TextView
        android:id="@+id/tv_forecast_date4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="1"

        tool:text="周日"
        android:textSize="28sp"
        android:textColor="@color/blue_grey_800_mix"
        android:textStyle="bold"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_forecast_lowest4"
        />


    <TextView
        android:id="@+id/tv_forecast_highest4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tool:text="29°"
        android:textSize="24sp"
        android:textColor="@color/blue_grey_100"
        android:textStyle="bold"



        app:layout_constraintTop_toTopOf="@id/tv_forecast_date4"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_forecast_lowest4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tool:text="10°"
        android:textSize="22sp"
        android:textColor="@color/blue_grey_100"
        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@id/tv_forecast_date4"
        app:layout_constraintStart_toStartOf="@id/tv_forecast_highest4"
        />

</androidx.constraintlayout.widget.ConstraintLayout>