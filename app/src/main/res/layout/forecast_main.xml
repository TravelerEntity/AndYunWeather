<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <include
        android:id="@+id/inclu_cons_weather_forecast_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/forecast_main_horizontal_item"
        />
    <include
        android:id="@+id/inclu_cons_weather_forecast_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/forecast_main_horizontal_item"
        />
    <include
        android:id="@+id/inclu_cons_weather_forecast_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/forecast_main_horizontal_item"
        />
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_weather_forecast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:constraint_referenced_ids="
        inclu_cons_weather_forecast_1,
        inclu_cons_weather_forecast_2,
        inclu_cons_weather_forecast_3"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>